---
layout: base.njk
---

<article class="blog-post">
  <header>
    <h1>{{ title }}</h1>
    <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time>
    {% if tags %}
      <div class="tags">
        {% for tag in tags %}
          {% if tag != "post" %}
            <span class="tag">{{ tag }}</span>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </header>

  <div class="content">
    {{ content | safe }}
  </div>

  <footer>
    <a href="/blog/">‚Üê Back to all posts</a>
  </footer>
</article>